# AWS Bedrock
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key

# Amazon Nova model IDs — use inference profile IDs for Nova 2 models
# US inference profiles (recommended): us.amazon.nova-2-lite-v1:0
# Global cross-region: us.amazon.nova-2-lite-v1:0 (same for US)
# Legacy v1 (if needed): amazon.nova-lite-v1:0
BEDROCK_MODEL_ID_LITE=us.amazon.nova-2-lite-v1:0
BEDROCK_MODEL_ID_SONIC=us.amazon.nova-2-sonic-v1:0

# Nutrition API
# Option 1: USDA FoodData Central (free — get key at https://api.data.gov/signup/)
USDA_API_KEY=DEMO_KEY

# Option 2: Nutritionix (paid — https://www.nutritionix.com/business/api)
NUTRITIONIX_APP_ID=
NUTRITIONIX_APP_KEY=

# Feature flags
USE_REAL_NUTRITIONIX=false
USE_MOCK_WEARABLES=true

# Telegram bot (optional - for mobile messenger access)
# Create bot via @BotFather, then set webhook:
# curl -X POST "https://api.telegram.org/bot<TOKEN>/setWebhook?url=https://your-domain.vercel.app/api/telegram"
TELEGRAM_BOT_TOKEN=

# Optional for demo scripts
NOVA_HEALTH_BASE_URL=http://localhost:3000
